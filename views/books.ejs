<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/css/bootstrap.min.css'>
    <link rel='stylesheet' href='/css/books.css'>
    <title>Document</title>
</head>
<body>

    <h1 class='display-4 ml-2'>What I'm Reading..</h1>

    <div class='container-fluid'>
        <div class='row'>
            <div class='col-3 menu-column'>
                <h3 class='mt-5'>Browse</h3>
                <div class='list-group mt-4'>
                    <a href='/books'><div id='recent' class='list-item p-2 text-center'>Recent</div></a>
                    <a href='/books/philosophy'><div class='list-item p-2 text-center'>Philosophy</div></a>
                    <a href='#'><div class='list-item p-2 text-center'>Psychology</div></a>
                    <a href='#'><div class='list-item p-2 text-center'>History</div></a>
                </div>
            </div>
            <div class='col-9'>
                <div class='row'>
                    <div class='col book-display-header'>
                        <h1 class='book-display-header-text'>Recent</h1>
                    </div>
                </div>
                <div class='row book-display'>

                <% books.forEach((book)=>{ %>

                    <div class='col book-col'>
                        <img class='book' src='<%= book.image %>'>
                        <h4 class='book-title'><%= book.title %></h4>
                        <p class='book-author'><%= book.author %></p>
                    </div>

                <% }) %>
                </div>
            </div>
        </div>
    </div>
    
<!-- Bottom Nav -->
        <ul class='nav shadow-sm fixed-bottom justify-content-center'>
                <li class='nav-item'>
                    <a class='nav-link' href='/'>Home</a>
                </li>
                <li class='nav-item'>
                    <a class='nav-link books' href='/books'>Books</a>
                </li>
                <li class='nav-item'>
                    <a class='nav-link' href='/contact'>Contact</a>
                </li>
            </ul>


    <script src='/js/books.js'></script>
</body>
</html>